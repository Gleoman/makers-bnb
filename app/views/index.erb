<h1>Sign up</h1>

<form action='/users' method='post'>
  <label for='name'>
    Name:
    <input name='name' type='text' required>
  </label>
  <label for='username'>
    Username:
    <input name='username' type='text' required>
  </label>
  <label for='password'>
    Password:
    <input name='password' type='password' required>
  </label>
  <input type='submit' value='Sign up'>
</form>

<% @listings.each do |space| %>
	<ul>
    <h2><%= space.name %> listed </h2>
    <p> Description: </p> <p><%= space.description %> </p>
		<p> Picture: </p><img src=<%= space.picture_url %>>
    <p> Price per Night: <%= space.price %> </p>
    <p> Availability: </p>
    <% space.availabilities.each do |availability| %>
      <%= availability.date.strftime('%d/%m/%Y') %>,

      <form action="/bookings/new" method='post'>
       <input type="hidden" name='space_id' value="<%= space.id %>" >
       <input type="hidden" name='availability_id' value="<%= availability.id %>">
       <input type="submit" value="Book <%= space.name %>">
     </form>

      <form action="/availability" method='post'>
        <input type="hidden" name='_method' value='delete'>
        <input type="hidden" name='space_id' value="<%= space.id %>" >
        <input type="hidden" name='availability_id' value="<%= availability.id %>">
        <input type="submit" value="Book <%= availability.date.strftime('%d/%m/%Y') %>"></button>
      </form>
    <% end %>
    <a href="/bookings/new">
      <button>Book space</button>
    </a>
  </ul>
  <% end %>
